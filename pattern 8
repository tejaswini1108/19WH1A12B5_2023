#include<bits/stdc++.h>
using namespace std;
int main()
{
	int i,j,n;
	cin>>n;
	for(i=0;i<n;i++)
	{
		for(j=0;j<n;j++)
		{
			if(i==(n/2))cout<<"*";
			else if(j==0||j==n-1)cout<<"*";
			else if(i<n-1&&i>0)
			{
				if(j==(n/2))cout<<" ";
				else cout<<"*";
			}
			else cout<<" ";
		}
		cout<<endl;
	}

	return 0;
}
